/**index.wxss**/

/* 轮播图 */
.main {
  margin: 0 5%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  display: flex;
  flex-direction: column;
}
.swiper_wrap {
  text-align: center;
}
.activeSwiper {
  transform: scale(1.5);
  transition: all 2s ease-in 0s;
  z-index: 20;
}
.nav_wrap {
  margin-bottom: 20rpx;
}
.nav {
  white-space: nowrap; padding:5rpx 0;
}
.nav_item {
  padding: 20rpx 45rpx;
  display: inline-block;
}
.nav_item_wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
/* 最近登录时间 */
.latestTime {
  font-size: 28rpx;
  padding: 10rpx 5rpx;
}
/* 视力数据 */
.sight_wrap {
  display: flex;
  justify-content: space-around;
}
.sight_left {
  flex:4;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.num_wrap {

}

.highNum {
  font-weight: 900;
  font-size: 40rpx;
  color: #03a89e;

}
.lowNum {
  font-size: 26rpx;
  font-weight: 500
}
.sight_title{
  font-size: 26rpx;
  margin: 20rpx 10rpx;
}
/* 按钮 */
.button_wrap {
  flex: 1;
  display:flex;
  justify-content: center;
  align-items: center;
}
.startbtn {
   width: 200rpx;
   height: 200rpx;
}
/* 重写首页轮播 */
.swiper-block {
  height: 300rpx;
  margin: 0 0 30rpx;
 
}
.swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: unset;
}
.swiper_item_wrapper {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.slide-image {
  height: 150rpx;
  width: 40%;
  border-radius: 10rpx;
  margin: 0rpx 10rpx;
  z-index: 1;
}
.active {
  transform: scale(1.8);
  transition: all 0.2s ease-in 0s;
  z-index: 20;
}
.username {
  font-size: 24rpx;
  font-weight: normal;
  padding: 10rpx;
}