.main {
    padding: 0 5%;
}
/* 拍照 */
.camera_wrap {
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
/* 表单 */
.user_title {
    font-weight: bold;
    font-size: 30rpx;
    margin: 10rpx 0;
}
.user-section {
    margin: 20rpx 0;
}
.user_title_input{
    box-sizing: border-box;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #eee;
    border-radius: 15rpx;
    font-size: 28rpx;
    padding: 10rpx 0 0 30rpx;
}
.user_title_input ::placeholder {
    line-height: 70rpx;
}
/* 性别 */
.user_classify {
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.user_gap {
   width: 45%;
   height: 80rpx;
   background: #eee;
   display: flex;
   justify-content: center;
   align-items: center;
   margin: 0 10rpx;
   border-radius: 15rpx;
   
}
.active {
    background: pink;
    color:  #fff;
}
.activeaBlue {
    background: blue;
    color: #fff;
}
.data_wrap {
    height: 80rpx;
    background: #eee;
    text-align: center;
    line-height: 80rpx;
}